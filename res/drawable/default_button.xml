<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/link_active" />
            <stroke android:width="1dp" android:color="@color/link_active" />
            <corners android:radius="3dp" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/link_active" />
            <stroke android:width="1dp" android:color="@color/link_active" />
            <corners android:radius="3dp" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#405A6A" />
            <stroke android:width="1dp" android:color="#E7EEF1" />
            <corners android:radius="3dp" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>