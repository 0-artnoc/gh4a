<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTheme" parent="Theme.AppCompat">
        <item name="sendIcon">@drawable/social_send_now_dark</item>
        <item name="contentEditIcon">@drawable/content_edit_dark</item>
        <item name="contentPictureIcon">@drawable/content_picture_dark</item>
        <item name="searchUserIcon">@drawable/search_users_dark</item>
        <item name="searchRepoIcon">@drawable/search_repos_dark</item>
        <item name="submoduleIcon">@drawable/submodule_dark</item>
        <item name="dirIcon">@drawable/folder_dark</item>
        <item name="fileIcon">@drawable/file_dark</item>
        <item name="commentsIcon">@drawable/comments_dark</item>
        <item name="cardViewTheme">@style/Base.CardView.Dark</item>
        <item name="headerUnderline">@drawable/header_underline_dark</item>
        <item name="colorAccent">#43782e</item>
        <item name="colorPrimary">#396426</item>
        <item name="colorPrimaryDark">#2d501e</item>
        <item name="android:textColorLink">#559639</item>
        <item name="actionBarTabStyle">@style/Widget.ActionBar.TabView</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="sendIcon">@drawable/social_send_now</item>
        <item name="contentEditIcon">@drawable/content_edit</item>
        <item name="contentPictureIcon">@drawable/content_picture</item>
        <item name="searchUserIcon">@drawable/search_users</item>
        <item name="searchRepoIcon">@drawable/search_repos</item>
        <item name="submoduleIcon">@drawable/submodule</item>
        <item name="dirIcon">@drawable/folder</item>
        <item name="fileIcon">@drawable/file</item>
        <item name="commentsIcon">@drawable/comments</item>
        <item name="listPopupWindowStyle">@style/Widget.AppCompat.Light.ListPopupWindow</item>
        <item name="cardViewTheme">@style/Base.CardView.Light</item>
        <item name="headerUnderline">@drawable/header_underline</item>
        <item name="colorAccent">#65b345</item>
        <item name="colorPrimary">#65b345</item>
        <item name="colorPrimaryDark">#5aa03d</item>
        <item name="android:textColorLink">#5aa03d</item>
        <item name="actionBarTabStyle">@style/Widget.ActionBar.TabView</item>
    </style>

    <style name="Base.CardView.Light" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Base.CardView.Dark" parent="CardView.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
