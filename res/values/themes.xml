        <item name="languageSmallIcon">@drawable/language_small_dark</item>
        <item name="forkSmallIcon">@drawable/fork_small_dark</item>
        <item name="starSmallIcon">@drawable/star_small_dark</item>
        <item name="sizeSmallIcon">@drawable/size_small_dark</item>
        <item name="cardViewTheme">@style/Base.CardView.Dark</item>
