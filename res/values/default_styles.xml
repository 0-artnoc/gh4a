<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="default_text_large" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="default_text_medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="default_text_small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    
    <style name="default_text_white_small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="default_text_code" parent="@style/default_text_small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#383838</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="default_text_large_url" parent="@style/default_text_medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0000CC</item>
    </style>
    
    <style name="default_text_medium_url" parent="@style/default_text_medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#0000CC</item>
    </style>
    
    <style name="default_text_small_url" parent="@style/default_text_medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#0000CC</item>
    </style>

    <style name="default_text_medium_subtitle" parent="@style/default_text_medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#23566D</item>
    </style>

    <style name="default_list_view" parent="@android:style/Widget.ListView">
        <item name="android:divider">@drawable/default_divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="default_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/default_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="default_image_button" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/default_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--
        style name="default_spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">#405A6A</item> <item
        name="android:padding">10dp</item> </style> <style
        name="default_textview_spinnerItem"
        parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFFFF</item> <item
        name="android:textSize">14sp</item> <item
        name="android:padding">0dp</item> </style
    -->

    <style name="default_button_dashboard" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/default_button_dashboard</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>