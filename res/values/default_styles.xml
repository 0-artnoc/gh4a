<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="default_text_large" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="default_text_medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="default_text_small" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="default_text_small_italic" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="default_text_micro" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    
    <style name="default_text_white_small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="default_text_code" parent="@style/default_text_small">
        <item name="android:textColor">#383838</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="default_text_large_url" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#0099cc</item>
    </style>
    
    <style name="default_text_medium_url" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#0099cc</item>
    </style>
    
    <style name="default_text_small_url" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#0099cc</item>
    </style>
    
    <style name="default_text_micro_url" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#0099cc</item>
    </style>

    <style name="default_text_medium_subtitle" parent="@style/default_text_large">
        <item name="android:textColor">#23566D</item>
    </style>

    <style name="default_list_view" parent="@android:style/Widget.ListView">
        <item name="android:divider">@drawable/default_divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="default_button_dashboard" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/default_button_dashboard</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="ButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="LoadingProgress">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    
</resources>