<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.gh4a.widget.ScrimInsetsLinearLayout
        android:id="@+id/inset_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        app:consumedEdges="top">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorPrimary"
            android:animateLayoutChanges="true"
            android:elevation="2dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:popupTheme="?attr/actionBarPopupTheme" />

        </LinearLayout>

        <com.gh4a.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/header_shadow">

                <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:spb_sections_count="6"
                    app:spb_speed="1.0"
                    app:spb_progressiveStart_activated="true"
                    app:spb_progressiveStart_speed="1.5"
                    app:spb_progressiveStop_speed="3.4"
                    app:spb_interpolator="spb_interpolator_acceleratedecelerate" />

                <com.gh4a.widget.StyleableTextView
                    android:id="@android:id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <FrameLayout
                    android:id="@+id/content_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </com.gh4a.widget.SwipeRefreshLayout>

    </com.gh4a.widget.ScrimInsetsLinearLayout>

    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.gh4a.widget.ScrimInsetsLinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="?attr/drawerBackground"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:id="@+id/left_drawer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:clickable="true"
            android:background="?attr/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:background="?android:attr/listDivider" />

        <ListView
            android:id="@+id/left_drawer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="none"
            android:overScrollMode="never"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </com.gh4a.widget.ScrimInsetsLinearLayout>

    <com.gh4a.widget.ScrimInsetsLinearLayout
        android:id="@+id/right_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="?attr/drawerBackground"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:id="@+id/right_drawer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:clickable="true"
            android:background="?attr/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:background="?android:attr/listDivider" />

        <ListView
            android:id="@+id/right_drawer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:overScrollMode="never"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </com.gh4a.widget.ScrimInsetsLinearLayout>

</android.support.v4.widget.DrawerLayout>
