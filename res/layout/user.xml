<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:padding="0dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
            <ImageView
                android:id="@+id/iv_gravatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <LinearLayout
                android:id="@+id/ll_user_info"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/iv_gravatar">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <TextView
                    android:id="@+id/tv_created_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:autoLink="email" />
                <TextView
                    android:id="@+id/tv_website"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:autoLink="map" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="0dp">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" >
                <TextView
                    android:id="@+id/tv_pub_repos_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/user_pub_repos"
                    android:gravity="center_vertical" />
                <Button
                    android:id="@+id/btn_pub_repos"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/tv_pub_repos_label"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">
                <TextView
                    android:id="@+id/tv_followers_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/user_followers"
                    android:gravity="center_vertical" />
                <RelativeLayout
                    android:id="@+id/rl_btn_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/tv_followers_label">
                    <Button
                        android:id="@+id/btn_followers"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true" />
                    <ProgressBar
                        android:id="@+id/pb_followers"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:indeterminateBehavior="repeat"
                        android:indeterminate="true"
                        style="@android:style/Widget.ProgressBar"
                        android:indeterminateOnly="true"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_following"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" >
                <TextView
                    android:id="@+id/tv_following_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/user_following"
                    android:gravity="center_vertical" />
                <Button
                    android:id="@+id/btn_following"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/tv_following_label"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_organizations"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" >
                <TextView
                    android:id="@+id/tv_organizations_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/user_organizations"
                    android:gravity="center_vertical" />
                <ImageButton
                    android:id="@+id/btn_organizations"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/tv_organizations_label"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_more" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_gists"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" >
                <TextView
                    android:id="@+id/tv_gists_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/gist_public"
                    android:gravity="center_vertical" />
                <ImageButton
                    android:id="@+id/btn_gists"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/tv_gists_label"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_more" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>