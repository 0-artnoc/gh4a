<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gh4a"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        app:title="@string/app_name"
        style="@style/ActionBar" />
    <ScrollView
        android:id="@id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_below="@id/actionbar">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="?attr/info_box">
                <ImageView
                    android:id="@+id/iv_gravatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />
                <LinearLayout
                    android:id="@+id/ll_user_info"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/iv_gravatar">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    <TextView
                        android:id="@+id/tv_created_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:autoLink="email" />
                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:autoLink="web" />
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:autoLink="map" />
                    <View
                        android:id="@id/separator"
                        android:layout_width="fill_parent"
                        android:layout_height="5dp" />
                </LinearLayout>
                <!-- LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/iv_gravatar">
                    <Button
                        android:id="@+id/btn_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_news_feed" />
                    <Button
                        android:id="@+id/btn_public_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_public_activity" />
                    <Button
                        android:id="@+id/btn_your_actions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_your_actions" />
                </LinearLayout-->
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <!-- LinearLayout
                    android:id="@+id/ll_user_email"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_email" />
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:autoLink="email" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </LinearLayout-->
                <!-- LinearLayout
                    android:id="@+id/ll_user_website"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_website" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </LinearLayout-->
                <!-- LinearLayout
                    android:id="@+id/ll_user_company"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_company" />
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </LinearLayout-->
                <!-- LinearLayout
                    android:id="@+id/ll_user_location"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_location" />
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:autoLink="map" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp" />
                </LinearLayout-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" />
                <RelativeLayout android:id="@+id/rl_news_feed"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tv_news_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_news_feed" />
                    <ImageButton
                        android:id="@+id/btn_news"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/tv_news_label"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_more" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/btn_news"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tv_pub_activity_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_public_activity" />
                    <ImageButton
                        android:id="@+id/btn_public_activity"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/tv_pub_activity_label"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_more" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/btn_public_activity"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tv_pub_repos_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_pub_repos" />
                    <Button
                        android:id="@+id/btn_pub_repos"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/tv_pub_repos_label"
                        android:layout_alignParentRight="true" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/btn_pub_repos"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tv_watched_repos_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_watched_repos" />
                    <RelativeLayout
                        android:id="@+id/rl_btn_watched_repos"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/tv_watched_repos_label">
                        <Button
                            android:id="@+id/btn_watched_repos"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true" />
                        <ProgressBar
                            android:id="@+id/pb_watched_repos"
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:indeterminateBehavior="repeat"
                            android:indeterminate="true"
                            style="@android:style/Widget.ProgressBar"
                            android:indeterminateOnly="true"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/rl_btn_watched_repos"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tv_followers_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_followers" />
                    <RelativeLayout
                        android:id="@+id/rl_btn_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/tv_followers_label">
                        <Button
                            android:id="@+id/btn_followers"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true" />
                        <ProgressBar
                            android:id="@+id/pb_followers"
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:indeterminateBehavior="repeat"
                            android:indeterminate="true"
                            style="@android:style/Widget.ProgressBar"
                            android:indeterminateOnly="true"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/rl_btn_followers"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" />
                <RelativeLayout
                    android:id="@+id/rl_following"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tv_following_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_following" />
                    <Button
                        android:id="@+id/btn_following"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/tv_following_label"
                        android:layout_alignParentRight="true" />
                    <View
                        android:background="?android:attr/divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/btn_following"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" />
                <RelativeLayout
                    android:id="@+id/rl_organizations"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tv_organizations_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/user_organizations" />
                    <ImageButton
                        android:id="@+id/btn_organizations"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/tv_organizations_label"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_more" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
